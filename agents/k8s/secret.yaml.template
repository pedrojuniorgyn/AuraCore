# agents/k8s/secret.yaml.template
# NOTA: Em produção, usar External Secrets ou Sealed Secrets
# Este é apenas um template - NÃO commitar com valores reais
apiVersion: v1
kind: Secret
metadata:
  name: auracore-agents-secrets
  namespace: auracore
type: Opaque
stringData:
  # Substituir por valores reais ou usar External Secrets
  ANTHROPIC_API_KEY: "${ANTHROPIC_API_KEY}"
  DATABASE_URL: "${DATABASE_URL}"
  REDIS_URL: "${REDIS_URL}"
  JWT_SECRET: "${JWT_SECRET}"
