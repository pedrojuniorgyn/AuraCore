# =============================================================================
# AURACORE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy to .env or .env.local and fill in values
# =============================================================================

# Database (SQL Server)
DB_HOST=localhost
DB_PORT=1433
DB_NAME=aura_core
DB_USER=sa
DB_PASSWORD=

# Auth (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# 2FA TOTP - Encrypts TOTP secrets in database (required for 2FA)
# Generate with: openssl rand -base64 32
TOTP_ENCRYPTION_KEY=

# Redis (optional - for cache, Pub/Sub)
REDIS_URL=redis://localhost:6379

# Metrics (optional - bearer token for /api/metrics in production)
METRICS_AUTH_TOKEN=

# SEFAZ (optional for dev)
SEFAZ_ENVIRONMENT=HOMOLOGACAO
SEFAZ_CERT_PATH=./certificates/cert.pfx
SEFAZ_CERT_PASSWORD=
